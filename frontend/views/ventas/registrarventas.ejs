    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Berkshire+Swash&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
  </head>

  <body>

  <div class="contenedor-header">
      <nav class="navigation">
          <img src="/img/Logo.png" class="icecreamlogo">
          <div class="log-outs">
              <button class="log-out"onclick="window.location.href='/'">Cerrar Sesi칩n</button>
          </div>
      </nav>
  </div>


    <main>
     <div class="titulo">
      <h1 class="h1">A침adir ventas</h1>
     </div>

     <div class="formulario">
         <table>
             <thead>
             <tr>
                 <th>Orden</th>
                 <th>Referencia</th>
                 <th>Cliente</th>
                 <th>Pedido</th>
                 <th>Fecha</th>
                 <th>Hora</th>
                 <th>Acci칩n</th>
             </tr>
             </thead>
             <tbody id="tablaPendientes">
             <!-- Se llena din치micamente -->
             </tbody>
         </table>
      </div>
    </main>
  <footer>
      <div class="footer-container">
          <div>
              <img src="/img/Logo.png" alt = Logo>
